pkgname=gvim-vimjp-git
pkgbase=vim
conflicts=('vim' 'vim-runtime' 'gvim')
pkgver=8.1.0039
pkgrel=1
arch=('i686' 'x86_64')
license=('custom:vim')
url="http://vim-jp.org"
makedepends=('gpm' 'python' 'libxt' 'desktop-file-utils' 'gtk3' 'lua' 'git')
source=("vim-repo::git+git://github.com/vim/vim.git")
sha1sums=('SKIP')

pkgver() {
  cd "${srcdir}"/vim-repo/src
  # git checkout v${pkgver}
  git describe  --tags | sed -E 's/^v//;s/-/./g'
}

build() {
  cd "${srcdir}"/vim-repo/src

  make distclean || true

  # ./configure \
  CPPFLAGS="-I ${HOME}/.pyenv/versions/3.6.5/include/python3.6m/" ./configure \
    --enable-fail-if-missing \
    --prefix=/usr \
    --with-features=huge \
    --enable-gui=gtk3 \
    --enable-multibyte \
    --enable-python3interp=dynamic

  make -j4
}

package() {
  cd "${srcdir}"/vim-repo/src
  make -j4 DESTDIR="${pkgdir}" install
  rm "${pkgdir}"/usr/bin/{view,ex}
}

# vim:set sw=2 sts=2 et ft=sh:
